{
  "openapi": "3.0.3",
  "info": {
    "title": "Auth.GG API",
    "description": "Authentication and licensing API for software applications",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://api.auth.gg",
      "description": "Production server"
    },
    {
      "url": "https://beta.auth.gg",
      "description": "Beta server"
    }
  ],
  "paths": {
    "/login": {
      "post": {
        "summary": "Login user",
        "description": "Authenticate a user with username and password",
        "operationId": "loginUser",
        "security": [
          {
            "apiKey": []
          }
        ],
        "x-code-samples": [
          {
            "lang": "curl",
            "source": "curl -X POST \"https://api.auth.gg/login\" \\\n  -H \"Content-Type: application/json\" \\\n  -H \"Authorization: <API_KEY>\" \\\n  -d '{\"username\":\"testuser\",\"password\":\"secretpass\",\"aid\":\"application_id\"}'"
          },
          {
            "lang": "javascript",
            "source": "fetch('https://api.auth.gg/login', {\n  method: 'POST',\n  headers: {\n    'Content-Type': 'application/json',\n    'Authorization': '<API_KEY>'\n  },\n  body: JSON.stringify({\n    username: 'testuser',\n    password: 'secretpass',\n    aid: 'application_id'\n  })\n})"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "username",
                  "password",
                  "aid"
                ],
                "properties": {
                  "username": {
                    "type": "string",
                    "description": "User's username",
                    "example": "testuser"
                  },
                  "password": {
                    "type": "string",
                    "description": "User's password",
                    "example": "secretpass"
                  },
                  "aid": {
                    "type": "string",
                    "description": "Application ID",
                    "example": "application_id"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful login",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "success"
                    },
                    "info": {
                      "type": "object",
                      "properties": {
                        "username": {
                          "type": "string",
                          "example": "testuser"
                        },
                        "email": {
                          "type": "string",
                          "example": "user@example.com"
                        },
                        "rank": {
                          "type": "string",
                          "example": "user"
                        },
                        "hwid": {
                          "type": "string",
                          "example": "hardware_id"
                        },
                        "lastLogin": {
                          "type": "string",
                          "example": "2024-02-20 12:00:00"
                        },
                        "lastIP": {
                          "type": "string",
                          "example": "127.0.0.1"
                        }
                      }
                    }
                  },
                  "example": {
                    "status": "success",
                    "info": {
                      "username": "testuser",
                      "email": "user@example.com",
                      "rank": "user",
                      "hwid": "hardware_id",
                      "lastLogin": "2024-02-20 12:00:00",
                      "lastIP": "127.0.0.1"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid request",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "failed"
                    },
                    "message": {
                      "type": "string",
                      "example": "Invalid username or password"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "apiKey": {
        "type": "apiKey",
        "in": "header",
        "name": "Authorization",
        "description": "API key for authentication"
      }
    }
  }
}