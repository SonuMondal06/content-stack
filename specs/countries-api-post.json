{
  "openapi": "3.0.3",
  "info": {
    "title": "REST Countries API",
    "description": "API to fetch information about countries",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://restcountries.com/v3.1",
      "description": "Production server"
    },
    {
      "url": "https://beta.restcountries.com/v3.1",
      "description": "Beta server"
    }
  ],
  "paths": {
    "/name/{name}": {
      "post": {
        "summary": "Create country by name",
        "description": "Creates a new country entry with the given name",
        "operationId": "createCountryByName",
        "x-code-samples": [
          {
            "lang": "curl",
            "source": "curl -X POST \"https://restcountries.com/v3.1/name/france\" -H \"Content-Type: application/json\" -d '{\"name\":{\"common\":\"France\",\"official\":\"French Republic\"},\"capital\":[\"Paris\"],\"region\":\"Europe\",\"population\":67391582,\"flags\":{\"png\":\"https://flagcdn.com/w320/fr.png\",\"svg\":\"https://flagcdn.com/fr.svg\"}}'"
          },
          {
            "lang": "javascript",
            "source": "fetch('https://restcountries.com/v3.1/name/france', {\n  method: 'POST',\n  headers: {\n    'Content-Type': 'application/json',\n  },\n  body: JSON.stringify({\n    name: {\n      common: 'France',\n      official: 'French Republic'\n    },\n    capital: ['Paris'],\n    region: 'Europe',\n    population: 67391582,\n    flags: {\n      png: 'https://flagcdn.com/w320/fr.png',\n      svg: 'https://flagcdn.com/fr.svg'\n    }\n  })\n})\n  .then(response => response.json())\n  .then(data => console.log(data));"
          }
        ],
        "parameters": [
          {
            "name": "name",
            "in": "path",
            "required": true,
            "description": "Name of the country to create (e.g. 'france')",
            "schema": {
              "type": "string"
            },
            "example": "france"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "object",
                    "properties": {
                      "common": {
                        "type": "string",
                        "example": "France"
                      },
                      "official": {
                        "type": "string",
                        "example": "French Republic"
                      }
                    }
                  },
                  "capital": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    },
                    "example": [
                      "Paris"
                    ]
                  },
                  "region": {
                    "type": "string",
                    "example": "Europe"
                  },
                  "population": {
                    "type": "integer",
                    "example": 67391582
                  },
                  "flags": {
                    "type": "object",
                    "properties": {
                      "png": {
                        "type": "string",
                        "example": "https://flagcdn.com/w320/fr.png"
                      },
                      "svg": {
                        "type": "string",
                        "example": "https://flagcdn.com/fr.svg"
                      }
                    }
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Country created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": "object",
                      "properties": {
                        "common": {
                          "type": "string",
                          "example": "France"
                        },
                        "official": {
                          "type": "string",
                          "example": "French Republic"
                        }
                      }
                    },
                    "capital": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      },
                      "example": [
                        "Paris"
                      ]
                    },
                    "region": {
                      "type": "string",
                      "example": "Europe"
                    },
                    "population": {
                      "type": "integer",
                      "example": 67391582
                    },
                    "flags": {
                      "type": "object",
                      "properties": {
                        "png": {
                          "type": "string",
                          "example": "https://flagcdn.com/w320/fr.png"
                        },
                        "svg": {
                          "type": "string",
                          "example": "https://flagcdn.com/fr.svg"
                        }
                      }
                    }
                  },
                  "example": {
                    "name": {
                      "common": "France",
                      "official": "French Republic"
                    },
                    "capital": [
                      "Paris"
                    ],
                    "region": "Europe",
                    "population": 67391582,
                    "flags": {
                      "png": "https://flagcdn.com/w320/fr.png",
                      "svg": "https://flagcdn.com/fr.svg"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid request body",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "integer",
                      "example": 400
                    },
                    "message": {
                      "type": "string",
                      "example": "Bad Request"
                    }
                  }
                },
                "example": {
                  "status": 400,
                  "message": "Bad Request"
                }
              }
            }
          }
        }
      }
    }
  }
}