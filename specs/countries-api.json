{
  "openapi": "3.0.3",
  "info": {
    "title": "REST Countries API",
    "description": "API to fetch information about countries",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://restcountries.com/v3.1",
      "description": "Production server"
    }
  ],
  "paths": {
    "/name/{name}": {
      "get": {
        "summary": "Get country by name",
        "description": "Returns information about a country by its name",
        "operationId": "getCountryByName",
        "x-code-samples": [
          {
            "lang": "curl",
            "source": "curl -X GET \"https://restcountries.com/v3.1/name/france\""
          },
          {
            "lang": "javascript",
            "source": "fetch('https://restcountries.com/v3.1/name/france')\n  .then(response => response.json())\n  .then(data => console.log(data));"
          }
        ],
        "parameters": [
          {
            "name": "name",
            "in": "path",
            "required": true,
            "description": "Name of the country (e.g. 'france')",
            "schema": {
              "type": "string"
            },
            "example": "france"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response with country data",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "name": {
                        "type": "object",
                        "properties": {
                          "common": {
                            "type": "string",
                            "example": "France"
                          },
                          "official": {
                            "type": "string",
                            "example": "French Republic"
                          }
                        }
                      },
                      "capital": {
                        "type": "array",
                        "items": {
                          "type": "string"
                        },
                        "example": [
                          "Paris"
                        ]
                      },
                      "region": {
                        "type": "string",
                        "example": "Europe"
                      },
                      "population": {
                        "type": "integer",
                        "example": 67391582
                      },
                      "flags": {
                        "type": "object",
                        "properties": {
                          "png": {
                            "type": "string",
                            "example": "https://flagcdn.com/w320/fr.png"
                          },
                          "svg": {
                            "type": "string",
                            "example": "https://flagcdn.com/fr.svg"
                          }
                        }
                      }
                    }
                  },
                  "example": [
                    {
                      "name": {
                        "common": "France",
                        "official": "French Republic"
                      },
                      "capital": [
                        "Paris"
                      ],
                      "region": "Europe",
                      "population": 67391582,
                      "flags": {
                        "png": "https://flagcdn.com/w320/fr.png",
                        "svg": "https://flagcdn.com/fr.svg"
                      }
                    }
                  ]
                }
              }
            }
          },
          "404": {
            "description": "Country not found",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "integer",
                      "example": 404
                    },
                    "message": {
                      "type": "string",
                      "example": "Not Found"
                    }
                  }
                },
                "example": {
                  "status": 404,
                  "message": "Not Found"
                }
              }
            }
          }
        }
      }
    }
  }
}